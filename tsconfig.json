  "compilerOptions": {
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true // Ajout n√©cessaire pour "allowImportingTsExtensions"
  },
  "include": [
    "src/**/*"
